exec --no-startup-id [ -f ~/.fehbg ] && exec ~/.fehbg
exec --no-startup-id pgrep sway && swaymsg output LVDS-1 bg ~/Documents/heroku.svg fill

# Lambdas! Wee! 
# The below command maps my "ö" key on my german apple keyboard.
exec --no-startup-id xmodmap -e "keycode 47 = U00F6 U00D6 U03BB U03BB U03BB U039B"

